        private void valoresIniciales() {
        this.txtNumero01.requestFocus();
    }

    
    private void btnCalcularActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnCalcularActionPerformed
       try {
        float resultado = suma();
        lblResultado.setText(String.valueOf(resultado));
    } catch (NumberFormatException e) {
        JOptionPane.showMessageDialog(this, "Por favor, ingrese números válidos en ambos campos.", "Error de entrada", JOptionPane.ERROR_MESSAGE);
    }
    }//GEN-LAST:event_btnCalcularActionPerformed

    private void btnNuevoActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnNuevoActionPerformed
    txtNumero01.setText("");
    txtNumero02.setText("");
    lblResultado.setText("");
    txtNumero01.requestFocus();
    }//GEN-LAST:event_btnNuevoActionPerformed

    private void txtNumero02ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_txtNumero02ActionPerformed
        // TODO add your handling code here:
    }//GEN-LAST:event_txtNumero02ActionPerformed
    private void btnSalirActionPerformed(java.awt.event.ActionEvent evt) {                                         
        int opcion = JOptionPane.showConfirmDialog(this, "¿Está seguro que desea salir?", "Confirmar salida", JOptionPane.YES_NO_OPTION);
        if (opcion == JOptionPane.YES_OPTION) {
            System.exit(0);
        }
    } 
     
