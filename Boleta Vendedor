    private void txtTotalVendidoActionPerformed(java.awt.event.ActionEvent evt) {                                                
        // TODO add your handling code here:
    }                                               

                                 
       private void btnCalcularActionPerformed(java.awt.event.ActionEvent evt) {
        calcularBoleta();
    }

    private void calcularBoleta() {
        try {
            double totalVendido = Double.parseDouble(txtTotalVendido.getText());
            double comision = totalVendido * PORCENTAJE_COMISION;
            double sueldoBruto = SUELDO_BASICO + comision;
            double descuento = sueldoBruto * PORCENTAJE_DESCUENTO;
            double sueldoNeto = sueldoBruto - descuento;

            DecimalFormat df = new DecimalFormat("#.##");

            String boleta = "Boleta del Vendedor\n" +
                    "Sueldo Básico: S/ " + df.format(SUELDO_BASICO) + "\n" +
                    "Comisión: S/ " + df.format(comision) + "\n" +
                    "Sueldo Bruto: S/ " + df.format(sueldoBruto) + "\n" +
                    "Descuento: S/ " + df.format(descuento) + "\n" +
                    "Sueldo Neto: S/ " + df.format(sueldoNeto);

            txtAreaBoleta.setText(boleta);
        } catch (NumberFormatException ex) {
            JOptionPane.showMessageDialog(this, "Ingrese un valor numérico válido para el importe total vendido.", "Error", JOptionPane.ERROR_MESSAGE);
        }
    }

